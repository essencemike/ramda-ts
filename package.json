{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@ramda/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test:coverage": "jest --coverage",
    "test:dev": "jest --watch --coverage",
    "test:unit": "jest",
    "test": "lerna run test",
    "clean": "lerna clean",
    "lint": "eslint --fix packages/**/*.ts",
    "build": "npm run clean && npm run bootstrap && lerna run build",
    "release": "npm run lint && npm run build && node scripts/release.js",
    "ls": "lerna ls",
    "commit": "git-cz",
    "changelog": "node scripts/genChangelog.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --ext .ts --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "execa": "^2.0.4",
    "husky": "^3.0.5",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "rollup": "^1.21.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.3",
    "semver": "^6.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 4.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8",
    "ios > 7",
    "Android >= 4.1"
  ]
}
